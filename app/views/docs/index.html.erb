<% if @docs.count == 0 %>
<div >
    <div class="align_center">
<h5 >Get started</h5>
<p> click on plus icon to create document</p>
</div>
<div class ="dropup">
<button type="button" class="btn btn-success button5 " data-toggle="dropdown" onclick="change_background()" >
          <span class=" fa fa-plus"></span> 
        </button>
<ul class="dropdown-menu  dropdown-menu-left">
          <li class = "dropdown-item"><button class = " drop_button btn btn-success"><%= link_to '<i class="fa fa-file-alt drop_button_color "></i>'.html_safe,textnote_path%></button></li>

           <li class = "dropdown-item"><button class = "drop_button btn btn-success"><%= link_to '<i class="fa fa fa-clock drop_button_color "></i>'.html_safe,remainder_path%></button></li>
     
           <li class = "dropdown-item"><button class = "drop_button btn btn-success"><%= link_to '<i class="fa fa-microphone drop_button_color "></i>'.html_safe,audio_path%></button></li>
      
           <li class = "dropdown-item"><button class = "drop_button btn btn-success"><%= link_to '<i class="fa fa-paperclip drop_button_color "></i>'.html_safe,attachment_path%></button></li>

           <li class = "dropdown-item"><button class = "drop_button btn btn-success"><%= link_to '<i class="fa fa-camera drop_button_color "></i>'.html_safe, camera_path%></button></li>
           <li class = "dropdown-item"><button class = "drop_button btn btn-success"><%= link_to '<i class="fa fa-pen drop_button_color "></i>'.html_safe, handwriting_path%></button></li>
  </ul>  
</div>

</div>
<%end%>
      <div class="container">
<br>
    <% @docs.each do |doc| %>
    <div class = "indexPage ">
        <h2>
        <%= link_to doc.title, doc,:class=>"link_color"%>
    </h2>
    <p><strong>Glympse of content: &nbsp;</strong>
        <%= truncate(doc.content, length:50) %>
    </p>
    <p><strong>Created date: &nbsp;</strong>
        <%= time_ago_in_words(doc.created_at) %>
    </p>
    </div>
    
    <%end%>
</div>
<div class = "container page_container"><%= will_paginate @docs, :previous_label => '<<', :next_label => '>>', :class=>"my_pagination" %></div>
